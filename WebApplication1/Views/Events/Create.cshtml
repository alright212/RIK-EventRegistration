@model EventRegistration.Application.CreateEventDto
@{
    ViewData["Title"] = "Ürituse lisamine";
}

<div class="event-creation-banner">
    <div class="banner-image-container">
        <img src="~/images/libled.png" alt="Ürituse lisamise päis" class="banner-image" />
    </div>
    <div class="banner-title">
        <h1>Ürituse lisamine</h1>
    </div>
</div>

<div class="form-container">
    <form asp-action="Create" class="event-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-3 col-form-label">Ürituse nimi:</label>
            <div class="col-sm-9">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EventTime" class="col-sm-3 col-form-label">Toimumisaeg:</label>
            <div class="col-sm-9">
                @* Muudetud 'datetime-local' 'text'-iks ja lisatud placeholder *@
                <input asp-for="EventTime" type="text" class="form-control" placeholder="pp.kk.aaaa hh:mm" />
                <span asp-validation-for="EventTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Location" class="col-sm-3 col-form-label">Koht:</label>
            <div class="col-sm-9">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="AdditionalInfo" class="col-sm-3 col-form-label">Lisainfo:</label>
            <div class="col-sm-9">
                <textarea asp-for="AdditionalInfo" class="form-control" rows="4"></textarea>
                <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            @* Nuppude järjestus ja tekst muudetud vastavalt pildile *@
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tagasi</a>
            <button type="submit" class="btn btn-primary">Lisa</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}