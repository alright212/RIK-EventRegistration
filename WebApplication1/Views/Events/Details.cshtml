@using System.Linq
@model EventRegistration.Application.EventDetailViewModel
@{
    ViewData["Title"] = "Osavõtjad";
}

<div class="breadcrumb">
    <span>Avaleht</span> &gt; <span>@Model.Event.Name</span> &gt; <span>Osavõtjad</span>
</div>

<div class="event-details-header">
    <h1>@Model.Event.Name</h1>
    <div class="event-meta">
        <span>Toimumisaeg: @Model.Event.EventTime.ToString("dd.MM.yyyy HH:mm")</span>
        <span>Koht: @Model.Event.Location</span>
    </div>
</div>

<h2>Osavõtjad (@Model.Participants.Count())</h2>

<table class="table participants-table">
    <thead>
        <tr>
            <th>Nimi</th>
            <th>Kood</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Participants != null && Model.Participants.Any())
        {
            @foreach (var participant in Model.Participants)
            {
                <tr>
                    <td>
                        @if (participant.ParticipantType == "Individual")
                        {
                            <text>@participant.FirstName @participant.LastName</text>
                        }
                        else
                        {
                            <text>@participant.LegalName</text>
                        }
                    </td>
                    <td>
                        @if (participant.ParticipantType == "Individual")
                        {
                            <text>@participant.PersonalIdCode</text>
                        }
                        else
                        {
                            <text>@participant.RegistryCode</text>
                        }
                    </td>
                    <td>
                        <a asp-controller="Participants" asp-action="Details" asp-route-eventId="@Model.Event.Id" asp-route-participantId="@participant.ParticipantId" class="btn btn-sm btn-outline-primary">VAATA</a>
                        <form asp-controller="Participants" asp-action="Delete" asp-route-eventId="@Model.Event.Id" asp-route-participantId="@participant.ParticipantId" method="post" style="display: inline-block;" onsubmit="return confirm('Kas olete kindel, et soovite selle osavõtja kustutada?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger">KUSTUTA</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-gray-500 py-4">Osavõtjaid ei ole veel lisatud</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h2>Lisa osavõtja</h2>
<div class="add-participant-form">
    <a asp-controller="Participants" asp-action="Add" asp-route-eventId="@Model.Event.Id" class="btn btn-primary">Lisa uus osavõtja</a>
</div>
@section Scripts {
    @* Scripts removed as inline forms are replaced with dedicated Add view *@
}
