<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Üritused</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/mobile.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Lato', sans-serif;
            background-color: #f0f2f5; 
        }
        .header-bg {
            background-color: #ffffff;
            border-bottom: 1px solid #e5e7eb;
        }
        .main-blue-bg {
            background-color: #2a5a8a;
        }
        .footer-bg {
            background-color: #373737;
        }
        .event-item {
            padding: 1rem 0;
        }
        .event-card {
            background-color: #ffffff;
        }
        .logo-box {
            border: 2px solid #2a5a8a;
            padding: 0.5rem 1rem;
            color: #2a5a8a;
        }
    </style>
</head>
<body class="text-gray-700">

    <div class="max-w-6xl mx-auto">

        <header class="header-bg shadow-lg">
            <div class="container mx-auto px-4 sm:px-6 py-3">
                <div class="flex justify-between items-center">
                    <!-- Logo and Desktop Navigation -->
                    <div class="flex items-center space-x-4 sm:space-x-8">
                        <div class="logo-box font-black text-lg sm:text-xl">
                            NULLAM
                        </div>
                        
                        <!-- Desktop Navigation -->
                        <nav class="hidden lg:flex items-center text-sm font-bold h-full">
                            @{
                                var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                                var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                            }
                            
                            <a asp-controller="Home" asp-action="Index" 
                               class="px-4 py-2 @(currentController.Equals("Home", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Index", StringComparison.OrdinalIgnoreCase) ? "main-blue-bg text-white" : "text-gray-600 hover:text-blue-600")">
                               AVALEHT
                            </a>
                            
                            <a asp-controller="Events" asp-action="Create" 
                               class="px-4 py-2 @(currentController.Equals("Events", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Create", StringComparison.OrdinalIgnoreCase) ? "main-blue-bg text-white" : "text-gray-600 hover:text-blue-600")">
                               ÜRITUSE LISAMINE
                            </a>
                        </nav>
                    </div>

                    <!-- Right side - Symbol and Mobile Menu Button -->
                    <div class="flex items-center space-x-4">
                        <div class="w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center">
                            <img src="@Url.Content("~/images/symbol.png")" alt="Symbol" class="w-full h-full object-cover">
                        </div>
                        
                        <!-- Mobile Menu Button -->
                        <button class="lg:hidden p-2 text-gray-600 hover:text-blue-600 focus:outline-none focus:text-blue-600" 
                                onclick="toggleMobileMenu()">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Mobile Navigation Menu -->
                <nav id="mobileMenu" class="lg:hidden hidden mt-4 pb-4 border-t border-gray-200">
                    <div class="space-y-2 pt-4">
                        <a asp-controller="Home" asp-action="Index" 
                           class="block px-4 py-3 text-sm font-bold @(currentController.Equals("Home", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Index", StringComparison.OrdinalIgnoreCase) ? "main-blue-bg text-white" : "text-gray-600 hover:text-blue-600 hover:bg-gray-50")">
                           AVALEHT
                        </a>
                        
                        <a asp-controller="Events" asp-action="Create" 
                           class="block px-4 py-3 text-sm font-bold @(currentController.Equals("Events", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Create", StringComparison.OrdinalIgnoreCase) ? "main-blue-bg text-white" : "text-gray-600 hover:text-blue-600 hover:bg-gray-50")">
                           ÜRITUSE LISAMINE
                        </a>
                    </div>
                </nav>
            </div>
        </header>

        <main class="mt-6 sm:mt-[30px] bg-white shadow-lg">
            @RenderBody()
        </main>

        <footer class="footer-bg text-white p-6 sm:p-8 md:p-12 mt-[30px] shadow-lg">
            <div class="container mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
                <div>
                    <h3 class="font-bold text-lg mb-4">Curabitur</h3>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="hover:underline">Emauris</a></li>
                        <li><a href="#" class="hover:underline">Kfringilla</a></li>
                        <li><a href="#" class="hover:underline">Din magna sem</a></li>
                        <li><a href="#" class="hover:underline">Kelementum</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold text-lg mb-4">Fusce</h3>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="hover:underline">Econsectetur</a></li>
                        <li><a href="#" class="hover:underline">Ksollicitudin</a></li>
                        <li><a href="#" class="hover:underline">Omvulputate</a></li>
                        <li><a href="#" class="hover:underline">Nunc fringilla tellu</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold text-lg mb-4">Kontakt</h3>
                    <div class="text-sm space-y-2">
                        <p class="font-bold">Peakontor: Tallinnas</p>
                        <p>Väike-Ameerika 1, 11415 Tallinn</p>
                        <p>Telefon: 605 4450</p>
                        <p>Faks: 605 3186</p>
                    </div>
                </div>
                <div class="pt-0 lg:pt-11">
                    <div class="text-sm space-y-2">
                        <p class="font-bold">Harukontor: Võrus</p>
                        <p>Oja tn 7 (külastusaadress)</p>
                        <p>Telefon: 605 3330</p>
                        <p>Faks: 605 3155</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    <script>
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            mobileMenu.classList.toggle('hidden');
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileButton = event.target.closest('[onclick="toggleMobileMenu()"]');
            
            if (!mobileButton && !mobileMenu.contains(event.target)) {
                mobileMenu.classList.add('hidden');
            }
        });
        
        // Close mobile menu when window is resized to desktop
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 1024) {
                document.getElementById('mobileMenu').classList.add('hidden');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>