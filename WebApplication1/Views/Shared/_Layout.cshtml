<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Üritused</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap" rel="stylesheet">
    <style>
        /* Custom styles to match the design */
        body {
            font-family: 'Lato', sans-serif;
            background-color: #f0f2f5; /* Light gray background for the whole page */
        }
        .header-bg {
            background-color: #ffffff;
            border-bottom: 1px solid #e5e7eb;
        }
        .main-blue-bg {
            background-color: #2a5a8a;
        }
        .footer-bg {
            background-color: #373737;
        }
        .event-item {
            /* border-bottom: 1px solid #e5e7eb; <-- This line has been removed */
            padding: 1rem 0;
        }
        /* The :last-child rule is no longer necessary and has been removed. */
        .event-card {
            background-color: #ffffff;
        }
        .logo-box {
            border: 2px solid #2a5a8a;
            padding: 0.5rem 1rem;
            color: #2a5a8a;
        }
    </style>
</head>
<body class="text-gray-700">

    <div class="max-w-6xl mx-auto">

        <header class="header-bg shadow-lg">
            <div class="container mx-auto px-6 py-3 flex justify-between items-center">
                <div class="flex items-center space-x-8">
                    <div class="logo-box font-black text-xl">
                        NULLAM
                    </div>
                    
                    <nav class="flex items-center text-sm font-bold h-full">
                        @{
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                            var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                        }
                        
                        <a asp-controller="Home" asp-action="Index" 
                           class="px-4 py-2 @(currentController.Equals("Home", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Index", StringComparison.OrdinalIgnoreCase) ? "main-blue-bg text-white" : "text-gray-600 hover:text-blue-600")">
                           AVALEHT
                        </a>
                        
                        <a asp-controller="Events" asp-action="Create" 
                           class="px-4 py-2 @(currentController.Equals("Events", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Create", StringComparison.OrdinalIgnoreCase) ? "main-blue-bg text-white" : "text-gray-600 hover:text-blue-600")">
                           ÜRITUSE LISAMINE
                        </a>
                    </nav>
                    </div>
                <div class="flex items-center">
                    <div class="w-10 h-10 border-2 border-blue-600 rounded-full flex items-center justify-center">
                        <span class="text-blue-600 font-bold text-xl">¥</span>
                    </div>
                </div>
            </div>
        </header>

        <main class="mt-[30px] bg-white shadow-lg">
            @RenderBody()
        </main>

        <footer class="footer-bg text-white p-8 md:p-12 mt-[30px] shadow-lg">
            <div class="container mx-auto grid sm:grid-cols-2 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="font-bold text-lg mb-4">Curabitur</h3>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="hover:underline">Emauris</a></li>
                        <li><a href="#" class="hover:underline">Kfringilla</a></li>
                        <li><a href="#" class="hover:underline">Din magna sem</a></li>
                        <li><a href="#" class="hover:underline">Kelementum</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold text-lg mb-4">Fusce</h3>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="hover:underline">Econsectetur</a></li>
                        <li><a href="#" class="hover:underline">Ksollicitudin</a></li>
                        <li><a href="#" class="hover:underline">Omvulputate</a></li>
                        <li><a href="#" class="hover:underline">Nunc fringilla tellu</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold text-lg mb-4">Kontakt</h3>
                    <div class="text-sm space-y-2">
                        <p class="font-bold">Peakontor: Tallinnas</p>
                        <p>Väike-Ameerika 1, 11415 Tallinn</p>
                        <p>Telefon: 605 4450</p>
                        <p>Faks: 605 3186</p>
                    </div>
                </div>
                <div class="pt-0 md:pt-11">
                    <div class="text-sm space-y-2">
                        <p class="font-bold">Harukontor: Võrus</p>
                        <p>Oja tn 7 (külastusaadress)</p>
                        <p>Telefon: 605 3330</p>
                        <p>Faks: 605 3155</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>