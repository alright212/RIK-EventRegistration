@model EventRegistration.Application.AddOrEditParticipantViewModel
@{
    ViewData["Title"] = "Osavõtja lisamine";
}

<div class="flex mb-8 h-20">
    <div class="flex w-full">
        <div class="w-1/3 main-blue-bg text-white flex items-center p-3 sm:p-4">
            <h1 class="text-xl sm:text-2xl font-bold m-0">@ViewData["Title"]</h1>
        </div>
        <div class="w-2/3">
            <img src="~/images/osalejad.png" alt="Osavõtja lisamise päis" class="w-full h-full object-cover" onerror="this.onerror=null;this.src='https://placehold.co/600x300/a0aec0/ffffff?text=Image';" />
        </div>
    </div>
</div>

<div class="bg-white p-6 sm:p-8 border border-gray-300 shadow-md rounded-md">
    <div class="mb-6">
        <p class="text-gray-600 text-sm">
            <strong>Üritus:</strong> @Model.EventName
        </p>
    </div>

    <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-3">Osavõtja tüüp:</label>
        <div class="flex space-x-2 border border-gray-300 rounded-md overflow-hidden">
            <button type="button" id="btnIndividual" 
                    class="flex-1 px-4 py-2 text-sm font-medium transition-colors duration-200 @(Model.ParticipantType == "Individual" ? "main-blue-bg text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200")">
                Eraisik
            </button>
            <button type="button" id="btnCompany" 
                    class="flex-1 px-4 py-2 text-sm font-medium transition-colors duration-200 @(Model.ParticipantType == "Company" ? "main-blue-bg text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200")">
                Ettevõte
            </button>
        </div>
    </div>

    <form asp-action="Add" method="post">
        <input type="hidden" asp-for="EventId" />
        <input type="hidden" asp-for="EventName" />
        <input type="hidden" asp-for="ParticipantType" id="participantTypeInput" />

        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

        <!-- Individual Participant Form -->
        <div id="individualForm" style="@(Model.ParticipantType == "Individual" ? "display: block;" : "display: none;")">
            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Individual.FirstName" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Eesnimi:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <input asp-for="Individual.FirstName" class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    <span asp-validation-for="Individual.FirstName" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Individual.LastName" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Perekonnanimi:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <input asp-for="Individual.LastName" class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    <span asp-validation-for="Individual.LastName" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Individual.PersonalIdCode" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Isikukood:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <input asp-for="Individual.PersonalIdCode" class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="38903030000" />
                    <span asp-validation-for="Individual.PersonalIdCode" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Individual.PaymentMethodId" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Makseviis:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <select asp-for="Individual.PaymentMethodId" asp-items="Model.PaymentMethods" 
                            class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="">Vali makseviis</option>
                    </select>
                    <span asp-validation-for="Individual.PaymentMethodId" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Individual.AdditionalInfo" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Lisainfo:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <textarea asp-for="Individual.AdditionalInfo" class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" rows="4"></textarea>
                    <span asp-validation-for="Individual.AdditionalInfo" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>
        </div>

        <!-- Company Participant Form -->
        <div id="companyForm" style="@(Model.ParticipantType == "Company" ? "display: block;" : "display: none;")">
            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Company.LegalName" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Juriidiline nimi:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <input asp-for="Company.LegalName" class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    <span asp-validation-for="Company.LegalName" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Company.RegistryCode" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Registrikood:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <input asp-for="Company.RegistryCode" class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="12345678" />
                    <span asp-validation-for="Company.RegistryCode" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Company.NumberOfParticipants" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Osavõtjate arv:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <input asp-for="Company.NumberOfParticipants" type="number" min="1" class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    <span asp-validation-for="Company.NumberOfParticipants" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Company.PaymentMethodId" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Makseviis:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <select asp-for="Company.PaymentMethodId" asp-items="Model.PaymentMethods" 
                            class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="">Vali makseviis</option>
                    </select>
                    <span asp-validation-for="Company.PaymentMethodId" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <div class="sm:flex sm:items-baseline mb-6">
                <label asp-for="Company.AdditionalInfo" class="block text-sm font-medium text-gray-700 sm:w-1/4 sm:text-right sm:pr-4">Lisainfo:</label>
                <div class="mt-1 sm:mt-0 sm:w-3/4">
                    <textarea asp-for="Company.AdditionalInfo" class="block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" rows="4"></textarea>
                    <span asp-validation-for="Company.AdditionalInfo" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>
        </div>

        <div class="flex flex-col sm:flex-row sm:justify-start gap-3 mt-8 pt-6 border-t border-gray-300">
            <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="w-full sm:w-auto px-4 py-2 text-center border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Tagasi</a>
            <button type="submit" class="w-full sm:w-auto px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white main-blue-bg hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Lisa osavõtja</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btnIndividual = document.getElementById('btnIndividual');
            const btnCompany = document.getElementById('btnCompany');
            const individualForm = document.getElementById('individualForm');
            const companyForm = document.getElementById('companyForm');
            const participantTypeInput = document.getElementById('participantTypeInput');

            function setParticipantType(type) {
                participantTypeInput.value = type;
                
                if (type === 'Individual') {
                    individualForm.style.display = 'block';
                    companyForm.style.display = 'none';
                    btnIndividual.classList.add('main-blue-bg', 'text-white');
                    btnIndividual.classList.remove('bg-gray-100', 'text-gray-700');
                    btnCompany.classList.remove('main-blue-bg', 'text-white');
                    btnCompany.classList.add('bg-gray-100', 'text-gray-700');
                } else {
                    individualForm.style.display = 'none';
                    companyForm.style.display = 'block';
                    btnCompany.classList.add('main-blue-bg', 'text-white');
                    btnCompany.classList.remove('bg-gray-100', 'text-gray-700');
                    btnIndividual.classList.remove('main-blue-bg', 'text-white');
                    btnIndividual.classList.add('bg-gray-100', 'text-gray-700');
                }
            }

            // Set initial state
            setParticipantType('@Model.ParticipantType' || 'Individual');

            btnIndividual.addEventListener('click', function () {
                setParticipantType('Individual');
            });

            btnCompany.addEventListener('click', function () {
                setParticipantType('Company');
            });
        });
    </script>
}
