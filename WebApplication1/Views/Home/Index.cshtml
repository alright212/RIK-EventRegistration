@using EventRegistration.Application
@{
    ViewData["Title"] = "Avaleht";
    var futureEvents = ViewBag.FutureEvents as IEnumerable<EventViewModel> ?? new List<EventViewModel>();
    var pastEvents = ViewBag.PastEvents as IEnumerable<EventViewModel> ?? new List<EventViewModel>();
}

<section class="grid md:grid-cols-2">
    <div class="main-blue-bg text-white p-8 md:p-12 flex flex-col justify-center">
        <h1 class="text-3xl font-bold mb-4">Tere tulemast ürituste lehele!</h1>
        <p class="text-lg leading-relaxed">
             Avasta põnevaid sündmusi ja halda oma osavõtte lihtsalt ja mugavalt.
        </p>
        <p class="mt-4 text-base leading-relaxed">
            Siit leiad nii tulevasi kui ka juba toimunud üritusi. Loo uusi sündmusi, kutsu osalejaid ja pea järge kõige olulisema üle.
        </p>
    </div>
    <div>
        <img src="@Url.Content("~/images/pilt.png")" alt="Ürituse illustratsioon" class="w-full h-full object-cover" onerror="this.onerror=null;this.src='https://placehold.co/600x400/a0aec0/ffffff?text=Image';">
    </div>
</section>

<section class="bg-gray-100 p-8 md:p-12">
    <div class="grid md:grid-cols-2 gap-12">

        <div class="event-card shadow-md rounded-md overflow-hidden">
            <h2 class="main-blue-bg text-white text-xl font-bold p-4">Tulevased üritused</h2>
            <div class="p-6">
                @if (futureEvents.Any())
                {
                    <ul>
                        @foreach (var ev in futureEvents)
                        {
                            <li class="event-item flex justify-between items-center">
                                <div>
                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="font-bold text-gray-800 hover:text-blue-600">@ev.Name</a>
                                    <p class="text-sm text-gray-500 mt-1">@ev.Location</p>
                                </div>
                                <div class="text-right flex items-center space-x-3">
                                    <p class="text-sm font-semibold">@ev.EventTime.ToString("dd.MM.yyyy")</p>
                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="text-xs font-bold text-gray-500 hover:text-blue-600">OSAVÕTJAD (@ev.ParticipantCount)</a>
                                    <a asp-controller="Events" asp-action="Edit" asp-route-id="@ev.Id" class="text-xs font-bold text-blue-600 hover:text-blue-800">MUUDA</a>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Tulevasi üritusi hetkel ei ole.</p>
                }
                <div class="mt-8">
                    <a asp-controller="Events" asp-action="Create" class="font-bold text-sm text-gray-600 hover:text-blue-700 uppercase">LISA UUS ÜRITUS</a>
                </div>
            </div>
        </div>

        <div class="event-card shadow-md rounded-md overflow-hidden">
            <h2 class="main-blue-bg text-white text-xl font-bold p-4">Toimunud üritused</h2>
            <div class="p-6">
                @if (pastEvents.Any())
                {
                    <ul>
                        @foreach (var ev in pastEvents)
                        {
                            <li class="event-item flex justify-between items-center">
                                <div>
                                    <p class="font-bold text-gray-800">@ev.Name</p>
                                    <p class="text-sm text-gray-500 mt-1">@ev.Location</p>
                                </div>
                                <div class="text-right flex items-center space-x-4">
                                    <p class="text-sm font-semibold">@ev.EventTime.ToString("dd.MM.yyyy")</p>
                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="text-xs font-bold text-gray-500 hover:text-blue-600">OSAVÕTJAD (@ev.ParticipantCount)</a>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Toimunud üritusi hetkel ei ole.</p>
                }
            </div>
        </div>

    </div>
</section>